<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Burgers!</h1>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-4">

      <h2>Yummy Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-md-4">
      <h2>Add a Burger 🍔</h2>
      <form class="create-form">

        <div class="form-group">
          <form action="/api/burgers" method="POST">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit" class="burgerAddButton">Add burger</button>
      </form>

    </div>
    <div class="col-md-4">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>